client.focused          #a5c261 #a5c261 #00BAA7 #00DA8E
client.focused_inactive #5f676a #5f676a #ffffff #484e50
client.unfocused        #424242 #424242 #888888 #292d2e
client.urgent           #da4939 #da4939 #ffffff #900000

# Start i3bar to display a workspace bar (plus the system information i3status
